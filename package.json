{
  "name": "my-bus-assistant",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo run lint",
    "clean:cache": "turbo clean",
    "clean:deps": "rm -rf node_modules && rm -rf apps/*/node_modules packages/*/node_modules",
    "clean": "turbo run clean --cache=false"
  },
  "devDependencies": {
    "turbo": "^2.8.3",
    "typescript": "~5.9.3"
  },
  "packageManager": "bun@1.2.4"
}
